		db:                 tx,
		logger:             q.logger,
		SlowQueryThreshold: q.SlowQueryThreshold,
		txID:               fmt.Sprintf("%p", tx),
     	{{- if .EmitPreparedQueries}}
		tx: tx,
		{{- range .GoQueries}}
		{{.FieldName}}: q.{{.FieldName}},
		{{- end}}
		{{- end}}
	}
}
